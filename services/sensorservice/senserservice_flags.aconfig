package: "com.android.frameworks.sensorservice.flags"
container: "system"

flag {
  name: "dynamic_sensor_hal_reconnect_handling"
  namespace: "sensors"
  description: "This flag controls if the dynamic sensor data will be clean up after HAL is disconnected."
